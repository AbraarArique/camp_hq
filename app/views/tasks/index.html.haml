- content_for :title do
  %title Tasks Assigned to #{@user.name} | CampHQ

.row
  .small-12.columns
    %h1.text-center Tasks of #{@user.name}
  .small-12.columns
    - @tasks.each do |i|
      .user
        %h2= link_to i.name, user_task_path(@user, i)
        %p= i.description
        %p= i.completed