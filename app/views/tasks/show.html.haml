- content_for :title do
  %title #{@task.name} | CampHQ

.row
  .small-12.columns.text-center
    %h1= @task.name
    = link_to 'Edit', edit_task_path(@task), class: 'button'
    = link_to 'Delete', task_path(@task), method: :delete, class: 'button alert'
  .small-12.columns
    %p
      %b About:
      #{@task.description}
    %p
      %b Status:
      #{@task.completed}
    %hr
    %h3 Users:
    = form_for :task, url: assign_user_path(@task) do |f|
      = f.select 'users', options_for_select(User.all.map { |i| [i.name, i.id] })
      = f.submit 'Assign A New User', class: 'button'
    - @task.users.each do |i|
      %p= link_to i.name, user_path(i)